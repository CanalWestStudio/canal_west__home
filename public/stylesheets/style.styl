@import 'reset'
@import 'fonts'
@import 'colors'
@import 'mixins'

body
	background rgba($sand, 0.4)
	border-bottom 25px solid $teal
	border-top 15px solid $orange
	box-shadow inset 0px 10px 15px 0px rgba(white, 1)
	color $black
	font 18px "montserratlight", Helvetica, Arial, sans-serif
	
h1 
	font 42px "moonlight", Helvetica, Arial, sans-serif
	
h2 
	font 32px "square_721_blkitalic", Helvetica, Arial, sans-serif
	
h3
	font 20px "montserratlight", Helvetica, Arial, sans-serif
	
h4
	font 18px "montserratlight", Helvetica, Arial, sans-serif
	font-style italic
	padding 5px
	-webkit-text-stroke: 1px $black;
	
h5
	font 23px "montserratlight", Helvetica, Arial, sans-serif
	padding 5px 10px

h6
	font 14px "square_721_blkitalic", Helvetica, Arial, sans-serif
	
	
a
	color rgba($teal, 0.9)

header
	border-top 5px solid $teal
	padding-top 50px
	.header-logo
		max-width 420px
	.contact
		a, a:visited, a:active
			bottom 20px
			color $black
			float right
			font-family "square_721_blkitalic"
			font-size 32px
			font-weight bold
			line-height 10px
			position relative
			-webkit-text-stroke 2px rgba($orange, 0.2)
			text-decoration none
			transition(all 0.3s)
			&:hover
				-webkit-text-stroke 2px rgba($orange, 0.4)
				transition(all 0.3s)
nav
	ul
		font-size 24px
		font-weight bold
		margin-left 148px
		padding 0
		li
			display inline
			margin-right 20px
			
.container-collections
	margin 0 auto
	overflow auto
	padding 0 0 40px 0
	:hover h3
		border-bottom 4px solid rgba($teal, 1)
		color $orange
		transition(all 0.3s)
	h3
		border-bottom 4px solid rgba($orange, 1)
		margin 3px 0
		padding 5px 0
		transition(all 0.5s)

	ul
		float left
		padding 2px 0px 2px 5px
	li
		list-style none
		margin 0 5px 0 5px
	
.container
	margin 0 auto
	max-width 1200px
	width 100%
	
.section
	background rgba(white, 0.65)
	border 4px solid rgba(white, 0.9)
	margin 15px 0
	padding 10px 15px
	transition(all ease-in-out 0.5s)
	p
		padding 5px 15px
	h2
		-webkit-text-stroke 2px rgba($orange, 0.3)
		transition(all ease-in-out 0.5s)
	h3
		font-weight bold
		padding 5px 15px 5px 10px
	&:hover
		background rgba(white, 0.6)
		border 4px solid rgba(white, 1)
		transition(all ease-in-out 0.5s)
	&:hover h2
		-webkit-text-stroke 2px rgba($orange, 0.4)
		transition(all ease-in-out 0.3s)
	
.container-collection
	background rgba($grey, 0.1)
	border 2px solid rgba($orange, 1)
	display inline-block
	margin 10px
	min-width 290px
	padding 0 0px 10px 0px
	transition(all 0.5s)
	&:hover
		background rgba($grey, 0.2)
		border 2px solid rgba($teal, 0.8)
		transition(all 0.3s)
	h3
		font-weight normal
		padding-bottom 5px
		padding-left 10px
		text-align left
		&:hover
			-webkit-text-stroke: 0.5px $orange;
	p, ul
		padding: 5px 0px 0 10px
		
.panel
	background rgba(white, 0.65)
	border 4px solid rgba(white, 0.9)
	display block
	margin 30px auto 90px auto
	overflow auto
	padding 40px 50px
	
.inner
	margin 0 auto
	max-width 1080px
	position relative
	width 100%
	.panel:hover
		background rgba(white, 1)
		transition(all ease-in-out 0.5s)
	
address
	color white
	position absolute
	right 0
	top 0
	ul
		li
			list-style none
			font-size 24px
				

.panel--inner
	margin 15px 20px
	padding 0px 10px 
	h3
		border-bottom 6px solid $teal
		transition(all ease-out 0.5s)
	h4
		color $black
		transition(all ease-in-out 0.5s)
	&:hover h4
		color $orange
		-webkit-text-stroke 1px $orange
		transition(all ease-in-out 0.3s)
	ul
		padding-left 40px
	li
		list-style square
		margin 5px 0
	&:hover h3
		border-bottom 6px solid $orange
		color $teal
		transition(all ease-in-out 0.5s)
	
footer
	background $orange
	box-shadow 0px 5px 10px 0px rgba(255,255,255,0.9)
	font-family 'montserratbold'
	height 260px
	padding 65px 0
	width 100%
	img.wordmark
		max-width 300px
	address
		font-style normal
		
@media all and (max-width: 480px)
	@import 'style-responsive'